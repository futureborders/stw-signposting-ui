{% extends "layout.njk" %}

{% set title = translation.common.header.serviceName %}

{% block pageTitle %}
{{title}} - {{serviceName}} - {{titleSuffix}}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row govuk-!-margin-top-9">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>

      <p class="govuk-body">{{ translation.page.startPage.whenService.p1 | safe}}</p>

      <ul class="govuk-list govuk-list--bullet">
        <li>{{ translation.page.startPage.whenService.l1 | safe }}</li>
        <li>{{ translation.page.startPage.whenService.l2 | safe }}</li>
        <li>{{ translation.page.startPage.whenService.l3 | safe }}</li>
      </ul>

      <p class="govuk-body">{{ translation.page.startPage.whatService.p1 | safe}}</p>

      <ul class="govuk-list govuk-list--bullet">
        <li>{{ translation.page.startPage.whatService.l1 | safe}}</li>
        <li>{{ translation.page.startPage.whatService.l2 | safe}}</li>
        <li>{{ translation.page.startPage.whatService.l3 | safe}}</li>
        <li>{{ translation.page.startPage.whatService.l4 | safe}}</li>
        <li>{{ translation.page.startPage.whatService.l5 | safe}}</li>
      </ul>

      <h2 class="govuk-heading-m">{{ translation.page.startPage.beforeStart.h2 | safe}}</h2>

      <p class="govuk-body">{{ translation.page.startPage.beforeStart.p1 | safe }}</p>

      <ul class="govuk-list govuk-list--bullet">
        <li>{{ translation.page.startPage.beforeStart.l1 | safe}}</li>
        <li>{{ translation.page.startPage.beforeStart.l2 | safe}}</li>
      </ul>

      <p class="govuk-body">{{ translation.page.startPage.beforeStart.p2 | safe}}</p>

      <a href="/type-of-trade" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
        {{ translation.page.startPage.startButton | safe}}
        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
          <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
        </svg>
      </a>

    {% if showLanguageToggle %}
      {{ govukInsetText({
        html: translation.page.startPage.alsoAvailable(toggledLanguagePath)
      }) }}
    {% endif %}

    </div>
  </div>
{% endblock %}
