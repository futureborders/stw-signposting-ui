{% if additionalCode !== 'false' and additionalCode !== undefined %}
{% set getAdditionalCode = " - " + additionalCode %}
{% else %}
{% set getAdditionalCode = "" %}
{% endif %}

{{ govukSummaryList({
  rows: [
    {
      key: {
        text: translation.common.tradeDetails.commodityCode,
        classes: 'govuk-!-width-one-third'
      },
      value: {
        text: commodityCode + getAdditionalCode
      },
      actions: {
        items: [
          {
            href: Route.exportCommoditySearch + "?" + queryParams + "&isEdit=true&tradeDetails=true",
            text: translation.common.tradeDetails.change,
            visuallyHiddenText: translation.common.tradeDetails.commodityCode,
            attributes: {
              id: 'changeCommodityCode'
            }
          }
        ]
      }
    },
    {
      key: {
        text: translation.common.tradeDetails.exportDate
      },
      value: {
        text: tradeDate | formatDate
      },
      actions: {
        items: [
          {
            href: Route.exportGoodsArrivalDate + "?" + queryParams + "&isEdit=true&tradeDetails=true",
            text: translation.common.tradeDetails.change,
            visuallyHiddenText: translation.common.tradeDetails.exportDate,
            attributes: {
              id: 'changeTradeDate'
            }
          }
        ]
      }
    },
    {
      key: {
        text: translation.common.tradeDetails.countryOfDeparture
      },
      value: {
        text: translation.page.exportOriginCountry[originCountry]
      },
      actions: {
        items: [
          {
            href: Route.exportOriginCountry + "?" + queryParams + "&isEdit=true&tradeDetails=true",
            text: translation.common.tradeDetails.change,
            visuallyHiddenText: translation.common.tradeDetails.countryOfDeparture,
            attributes: {
              id: 'changeCountryOfDeparture'
            }
          }
        ]
      }
    },
    {
      key: {
        text: translation.common.tradeDetails.goodsGoingInto
      },
      value: {
        text: destinationCountryName
      },
      actions: {
        items: [
          {
            href: Route.exportCountryDestination + "?" + queryParams + "&isEdit=true&tradeDetails=true",
            text: translation.common.tradeDetails.change,
            visuallyHiddenText: translation.common.tradeDetails.goodsGoingInto,
            attributes: {
              id: 'changeGoodsGoingInto'
            }
          }
        ]
      }
    },
    {
      key: {
        text: translation.common.tradeDetails.classification
      },
      value: {
        html: '<div class="truncated-block-container" id="toggle"><div class="truncated truncated-block" data-show-label="' + translation.page.manageThisTrade.showLabel + '" data-hide-label="' + translation.page.manageThisTrade.hideLabel + '">' + commodityClassification + '</div></div>'
      },
      actions: {
        items: [{
          href: "#",
          text: translation.common.tradeDetails.change,
          classes: "govuk-!-display-none",
          attributes: {
            "aria-hidden": true
          }
        }]
      }
    }
  ]
}) }}
